<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>net.iog.web.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/team.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/game.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/forum.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/about.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/contact.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>net.iog.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>net.iog.web.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeamServlet</servlet-name>
        <servlet-class>net.iog.web.TeamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddForumServlet</servlet-name>
        <servlet-class>net.iog.web.AddForumServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InviteServlet</servlet-name>
        <servlet-class>net.iog.web.InviteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmRegistration</servlet-name>
        <servlet-class>net.iog.web.ConfirmRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactUs</servlet-name>
        <servlet-class>net.iog.web.contactUs</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/cs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/ts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/t_register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddForumServlet</servlet-name>
        <url-pattern>/fs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddForumServlet</servlet-name>
        <url-pattern>/forum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InviteServlet</servlet-name>
        <url-pattern>/invite</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmRegistration</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactUs</servlet-name>
        <url-pattern>/contactUs</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
